<h2>You've located a stray furbaby</h2>

<%= form_with url: '/furbabies', method: :post do |f| %>
   <%= f.hidden_field :dna, value: @furbaby.dna %>
  <%= f.hidden_field :token_id, value: @token.id %>
<%=f.submit 'Adopt this stray with token #'+@token.id.to_s %>
 <% end %>

 <p class="btn">
 &nbsp;or <%=link_to 'look again', ''%>
 </p>

<%= render @furbaby %>

<script type="module">
setTimeout(function(){
renderer.flyTo="stray";
},50);
</script>
