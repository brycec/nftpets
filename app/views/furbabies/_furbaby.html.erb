

<table>
  <thead>
      <tr><th colspan=6><h2><%=@furbaby.dname %></h2></th></tr>
  </thead>
  <tbody>
  <tr>
    <td rowspan=5>
    <% if @furbaby.parents.length>0 %>
      Child of <%@furbaby.parents.map{|e|%>
      <%=link_to e.dname, '/furbabies/'+e.id.to_s %>,
    <%}%><br>
    <% end %>
    <% if @furbaby.children.length>0 %>
      Parent of <%@furbaby.children.map{|e|%>
      <%=link_to e.dname, '/furbabies/'+e.id.to_s %>,
    <%}%><br>
    <% end %>
         <%=@furbaby.description %><br>
      <small><%=@furbaby.dna.split(/(....)/).filter{|e|e[0]}.join('-') %></small></td>
    <tr>
     <th>rarity</th>
     <td><%= @furbaby.rarity %></td>
     </tr>
    <tr>
     <th>pheno</th>
     <td><%=@furbaby.pheno %></td>
    </tr>
    <tr>
     <th>birthday</th>
     <td><%=space_time @furbaby.created_at.to_datetime %><br><%= @furbaby.astro %></td>
     </tr>
</tbody>
</table>
