
<h2>Bestow a name upon this furbaby</h2>
<%= form_with url: '/furbabies/'+@furbaby.id.to_s, method: :patch do |f| %>
<table>
  <tr>
    <th>
<%= f.label :first, "First name" %>
</th>
<th>
<%= f.label :middle, "Middle name" %>
</th>
<th>
<%= f.label :last, "Last name" %>
</th>
</tr>
<tr>
  <td>
    <%v=@furbaby.vocab.map {|e|[e.capitalize,e]}%>
<%= f.select :first, v.shuffle %>
</td>
<td>
<%= f.select :middle, v.shuffle %>
</td>
<td>
<%= f.select :last, v.shuffle %>
</td>
</tr>
</table>
<%= f.submit 'Make it Official' %>
<% end %>
<br>
<%= render @furbaby %>

<script type="module">
  renderer.flyTo="cat";
  </script>
