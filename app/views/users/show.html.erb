<% content_for :path do %><%='users/'+@user.id.to_s%>
<% end %>
<table>
  <tr><th>users/<%=@user.id %>:</th><td><%=@user.name%></td></tr>
  <tr><th>joined:</th><td> <%=space_time @user.created_at.to_datetime%> </td></tr>
 <tr><th>networth:</th><td>$9999</td></tr>
</table>

<h2><%=@user.name%>'s tokens</h2>
<table>
  <tr>
    <th>id</th><th>furbaby</th><th>vibes</th>
  </tr>
  <%@tokens.each do |t|%>
   <tr class="maili">
    <td>
     <%=link_to t.id.to_s, '/tokens/'+t.id.to_s %>
    </td>
    <td>
      <%if t.furbaby_id %>
       <%=t.furbaby_id%>
      <%else%>
      ready for adoption
      <%end%></td>
    <td><%=t.vibes.to_s%></td>
   </tr>
  <%end%>
</table>
<% if @user.id == current_user.id  %>
 <%= form_with model: Token do |f|%>
   <%= f.submit "mint token" %>
 <%end%>
 <%= link_to 'stray furbabies', '/furbabies' %>
<h5><i>This is you.</i></h5>
<% end %>
