<% content_for :path do %><%='users/'+@user.id.to_s%>
<% end %>
<table>
  <tr><th>operator</th><th>since</th><th>cpu</th><th>holdings</th><th>networth</th></tr>
  <tr>
    <td><%=@user.name%></td>
    <td> <%=space_time @user.created_at.to_datetime %> </td>
    <td> <%=render inline: ['<b class="good">New</b>',
      '<b class="ok">Dented</b>',
      '<b class="warn">Smoking</b>',
      '<b class="bad">Fried</b>' ][@user.damage?] %> </td>
      <td>
        <% @user.holdings.each do |h| %>
        <%=h[0]%><%=h[1]%><s>N</s>
        <% end %>
      </td>
    <td><%=@user.networth%><s>N</s></td>
  </tr>
  <tr>
    <td colspan=5>
      <%s = @user.holdings.inject(0){|a,b|a+b[1]}%>
      <table>
        <tr>
      <%@user.holdings.each do |h| %>
      <th style="text-align:center; width:<%=((h[1].to_f/s)*100).to_s%>%">
        <%=((h[1].to_f/s)*100).round(1).to_s%>%
        </th>
      <% end %>
      </tr>
        <tr>
      <%@user.holdings.each do |h| %>
      <td style="text-align:center; width:<%=((h[1].to_f/s)*100).to_s%>%">
        <%=h[0]%>
        </td>
      <% end %>
      </tr>
      </table>
      </td>
  </tr>
</table>

<h2><%=@user.name%>'s tokens:</h2>
<table>
  <tr>
    <th>id</th><th>furbaby</th><th>rarity</th><th>vibes</th>
  </tr>
  <%@tokens.each do |t| f=t.furbaby%>
   <tr class="maili">
    <td>
     <%=link_to t.id.to_s, '/tokens/'+t.id.to_s %>
    </td>
    <td>
      <%if f %>
       <%=f.dname%>
      <%else%>
       None.
       <% if current_user and current_user.id==t.user_id %>
        <%=link_to 'Find one', '/tokens/'+t.id.to_s %>
       <% end %>
      <%end%></td>
    <td>
      <%if f and !f.egg? %>
        <%= f.rarity %>

      <% end %>
    </td>
    <td><%if f and f.egg? then %>???<% else %><%=t.vibes.to_s%><s>N</s><% end %></td>
   </tr>
  <%end%>
</table>
<% if logged_in? and @user.id == current_user.id  %>
 <%= form_with model: Token do |f|%>
   <%= f.submit "mint token" %>
 <%end%>

<h5><i>This is your page.</i></h5>
<% end %>
